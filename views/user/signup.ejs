<% layout("/layouts/boilerplate") %>
<div class="row">
      <div class="col-8 offset-2 mt-3 ">
        <h1>Singup to Wanderlust</h1>
        <form action="/user/signup" method="post">
            <div class="mt-5">
               <label for="username">Username:</label>
               <input type="text" type="username" name="username" id="username" class="form-control" required>
               <div class="invalid-feedback">Enter vailed Details</div>
                <div class="valid-feedback">
                  Looks good!
               </div>
            </div>
            <div class="mt-2">
               <label for="email">Email:</label>
               <input type="email" type="email" name="email" id="email" class="form-control" required>
               <div class="invalid-feedback">Enter vailed Details</div>
                <div class="valid-feedback">
                  Looks good!
               </div>
            </div>
            <div class="mt-2">
               <label for="password">Password:</label>
               <input type="password" name="password" id="password" class="form-control" required>
               <div class="invalid-feedback">Enter vailed Details</div>
                <div class="valid-feedback">
                  Looks good!
               </div>
            </div>
            <button class="btn btn-success mt-4">Signup</button>
        </form>
      </div>
   </div>