<% layout("/layouts/boilerplate") %>
<div class="row">
   <div class="col-8 offset-2 ">
      <h1>Create a New Listing</h1>
      <form action="/listings" method="post"  novalidate class= "needs-validation" >
         <!--  -->
         <div class="mb-3">
            <label for="title" class="form-label">Enter title: </label>
            <input type="text" placeholder="Add a catchy Title" name="title" id="title" class="form-control" required>
            <div class="invalid-feedback">Enter vailed Details</div>
               <div class="valid-feedback">
               Looks good!
            </div>
         </div>
         <div class="mb-3">
            <label for="discription"  class="form-lable">discription: </label>
            <br>
            <textarea  name="description" id="discription" class="form-control" required></textarea>
            <div class="invalid-feedback">Enter vailed Details</div>
               <div class="valid-feedback">
               Looks good!
            </div>
         </div>   
         <div class="mb-3">
            <label for="image">Enter image URL: </label>
            <input type="url" placeholder="Enter image URL/Link" name="image" id="image" class="form-control" >
            <!-- <label for="image" class="form-label">Uploded File: </label>
            <input type="file" placeholder="Choose file" name="image" id="image" class="form-control" > -->
            <div class="invalid-feedback">Enter vailed Details</div>
               <div class="valid-feedback">
               Looks good!
            </div>
         </div>
         <div class="row">
            <div class="mb-3 col-4">
               <label for="price" class="form-lable">Price: </label>
               <input type="number" placeholder="1200" name="price" id="price" class="form-control" required>
               <div class="invalid-feedback">Enter vailed Details</div>
                  <div class="valid-feedback">
               Looks good!
            </div>
            </div>
            <div class="mb-3 col-md-8">
               <label for="country" class="form-lable">country: </label>
               <input type="text" placeholder="india" name="country" id="  country" class="form-control" required>
               <div class="invalid-feedback">Enter vailed Details</div>
                  <div class="valid-feedback">
               Looks good!
            </div>
            </div>
         </div>
         <div class="mb-md-3">
            <label for="location" class="form-lable">location</label>
            <input type="text" placeholder="Tohana,Haryana" name="location" id="location" class="form-control" required>
            <div class="invalid-feedback">Enter vailed Details</div>
               <div class="valid-feedback">
               Looks good!
            </div>
         </div>
            <button class="btn btn-outline-dark">submit</button>
         </form>
   </div>
</div>
</body>