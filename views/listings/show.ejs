<% layout("/layouts/boilerplate") %>

    <div class="row">
      <div class="col-8 offset-1">
        <h2><%=listing.title%>:</h2>
      </div>
      <div class="card col-8 offset-1">
        <img src="<%=listing.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <p class="card-text">
            <b><i>owned by <%=listing.owner.username%></i></b><br>
            <%=listing.description%> <br>
            &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
            <%=listing.location%> <br>
            <%=listing.country%>
          </p>
        </div>
      </div>
    <br>
    <%if(curruser && curruser._id.equals(listing.owner._id)){%>
        <div class="row">
      <div class="col-1 offset-1 mb-3">
         <a href="/listings/<%= listing.id %>/edit" class="btn btn-danger" method="POST">Edit</a>
      </div>
      <div class="col-1 ">
        <form  method="POST" action="/listings/<%=listing.id%>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <%}%>



    <div class="col-8 offset-1 mb-3">
      <hr>
        <h4>Leave Review</h4>
        <form action="/listings/<%=listing.id%>/reviews" method="post" novalidate class="needs-validation">
          <fieldset class="starability-slot">
            <h5>Rating:</h5>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <div class="mb-3 mt-3">
            <label for="review" class="form-label">comment:</label>
            <textarea name="review[comment]" class="form-control" id="review" rows="5" cols="30" required></textarea>
             <div class="invalid-feedback">Enter valid details</div>
             <div class="valid-feedback">Looks good!</div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
        <br>
        <hr> 
         <h4>All Reviews</h4>
            <div class="row">
                  <% for(review of listing.reviews) {%>
                    <div class="col-12 col-md-4 mb-4 ">
                        <div class="card h-100 border">
                          <div class="card-body">
                            <h5 class="card-title">@<%= review.author.username%></h5>
                            <br>
                            <p class="starability-result card-text" data-rating=<%=review.rating%>></p>
                            <p class="card-text"><%= review.comment %></p>
                            <form class="mb-3"  method="POST" action="/listings/<%=listing.id%>/reviews/<%=review.id%>">
                              <button class="btn btn-sm btn-dark mb-2 mt-2">Delete</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    <% } %>
            </div>

    </div>
  </div>